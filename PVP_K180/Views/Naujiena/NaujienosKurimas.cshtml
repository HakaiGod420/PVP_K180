@{
    ViewBag.Title = "NaujienosKurimas";
}

<h2>NaujienosKurimas</h2>

@using (Html.BeginForm("NaujienosKurimas", "Naujiena", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
