@model PVP_K180.ModelView.BalsavimoBusenaPerziura

@{
    ViewBag.Title = "KeistiBalsavimoBusena";
}

<h2>Keisti balsavimo būseną</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.Busenos, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.balsavimo_Busena, Model.Busenos, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Busenos, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Atgal", "ZiuretiBalsavimus","Balsavimas")
</div>
