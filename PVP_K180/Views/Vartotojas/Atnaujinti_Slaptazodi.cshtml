@model PVP_K180.ModelView.Slaptazodzio_Atnaujinimo_Duomenys

@{
    ViewBag.Title = "Atnaujinti_Slaptazodi";
}


<style>
    .boxShadow {
        box-shadow: 0 1px 10px rgb(0 0 0 / 0.2);
        border-radius: 5px;
        width: 100%;
        padding: 10px;
        position: relative;
        background-color: white;
    }
</style>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div style="margin-top:20px" class="boxShadow form-horizontal">
    <h2>Keisti slaptažodį</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.senas_slaptazodis, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.senas_slaptazodis, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.senas_slaptazodis, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.naujas_slaptazodis, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.naujas_slaptazodis, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.naujas_slaptazodis, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Atnaujinti" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div style="margin:2vh">
    <input type="submit" value="< Atgal" onclick="@("window.location.href='" + @Url.Action("ProfilioValdymas", "Vartotojas") + "'");" class="btn btn-info" />
</div>
