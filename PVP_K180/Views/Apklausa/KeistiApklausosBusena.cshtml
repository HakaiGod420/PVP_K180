@model PVP_K180.ModelView.ApklausosBusenaPerziura

@{
    ViewBag.Title = "KeistiApklausosBusena";
}

<h2>KeistiApklausosBusena</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Apklausa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            @Html.LabelFor(model => model.apklausos_Busena, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.apklausos_Busena, Model.Busenos, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.apklausos_Busena, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atgal", "ZiuretiApklausas")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
